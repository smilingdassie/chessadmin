@model ChessAdminWebMVC.Game

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Game</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.PlayerOneID)
    @Html.HiddenFor(model => model.PlayerTwoID)
    @Html.HiddenFor(model => model.PlayerOneCurrentRank)
    @Html.HiddenFor(model => model.PlayerTwoCurrentRank)
    <div class="form-group">
        @Html.LabelFor(model => model.PlayerOneID, "PlayerOneID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("PlayerOneID", null, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.PlayerOneID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PlayerTwoID, "PlayerTwoID", htmlAttributes: new { @class = "control-label col-md-2" })
